<?xml version="1.0"?>
<rolemap>
  <roles>              
    <role name="SysAdmin" />
    <role name="SecStaff" /> 
    <role name="SecAuditor" />   
  </roles>	
  <permissions>
    <!-- Map the "add" permissions for the various content types. Note that
         we let the "Contributor" role (in a folder) be allowed to add content
         when the "Owner" is, so that we can effectively delegate control
         over a folder. Some content types, such as project folders  are considered to be 
         so "structural" that only administrators
         can add them.
      -->
	<permission name="View" acquire="True">
    	<role name="Owner" />		
    	<role name="Contributor"/>
    	<role name="Editor"/>
    	<role name="Reader"/>
    	<role name="Reviewer"/>
		<role name="Manager"/>
		<role name="Member"/>		
		<role name="Site Administrator"/>		
		<role name="EMCDesigner"/>
		<role name="Designer"/>
		<role name="ProjectReader"/>		
    </permission>
    
	<permission name="Add portal content" acquire="True">
    	<role name="Owner" />		
    	<role name="Contributor"/>
    	<role name="Editor"/>
    	<role name="Reviewer"/>
		<role name="Manager"/>
		<role name="Member"/>		
		<role name="Site Administrator"/>		
		<role name="EMCDesigner"/>
		<role name="Designer"/>		
    </permission>
	<permission name="Modify portal content" acquire="True">
    	<role name="Owner" />		
    	<role name="Contributor"/>
   	 	<role name="Editor"/>
   	 	<role name="Reviewer"/>
		<role name="Manager"/>
		<role name="Member"/>		
		<role name="Site Administrator"/>		
		<role name="EMCDesigner"/>
		<role name="Designer"/>		
    </permission>    

	<permission name="Delete objects" acquire="True">
    <role name="Owner" />		
    <role name="Contributor"/>
		<role name="Manager"/>	
		<role name="Site Administrator"/>		
    </permission>        
	
    <permission name="Access contents information" acquire="True">
    	<role name="Contributor"/>
    	<role name="Editor"/>
    	<role name="Reader"/>
    	<role name="Reviewer"/>
		<role name="Manager"/>
		<role name="Member"/>		
		<role name="Site Administrator"/>		
		<role name="EMCDesigner"/>
		<role name="Designer"/>
		<role name="ProjectReader"/>					  
    </permission>

	<permission name="List folder contents" acquire="True">
		<role name="Contributor"/>
		<role name="Editor"/>
		<role name="Manager"/>
		<role name="Owner"/>
		<role name="Reviewer"/>
		<role name="EMCDesigner"/>
		<role name="Designer"/>				
		<role name="Site Administrator"/>
	</permission>

    <permission name="List portal members" acquire="True">
    	<role name="Manager"/>
    	<role name="Member"/>
    	<role name="Site Administrator"/>
    	<role name="SysAdmin" />
    	<role name="SecStaff" /> 
    	<role name="SecAuditor" />       	
    </permission>
    <permission name="Add portal member" acquire="False">
    	<role name="Manager"/>
    	<role name="Owner"/>
    	<role name="Site Administrator"/>
    	<role name="SysAdmin" />   	
    </permission>
    <permission name="View management screens" acquire="True">
    	<role name="Manager"/>
    	<role name="Owner"/>
    	<role name="SysAdmin" />
    	<role name="SecStaff" /> 
    	<role name="SecAuditor" />       	
    </permission>          
  </permissions>		
</rolemap>